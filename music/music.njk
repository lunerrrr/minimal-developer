---
layout: layouts/base.njk
templateClass: tmpl-post
title: Music
---
<h1>songs i really like</h1>
{% set songs = musicSongs or [] %}
{% if songs | length %}
<ul class="song-list">
	{% for entry in songs %}
		{% set label = entry.song or entry.url or 'Untitled track' %}
		{% set coverQuery = entry.coverQuery or entry.song or entry.url %}
		<li class="song-entry"{% if coverQuery %} data-cover-query="{{ coverQuery | escape }}"{% endif %}>
			<div class="song-row">
				<div class="song-cover">
					<img
						class="song-cover-img"
						src="{{ entry.cover or 'data:image/gif;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs=' }}"
						alt="Album art for {{ label }}"
						loading="lazy"
						width="96"
						height="96"
						{% if not entry.cover %}data-cover-pending="true"{% endif %}
					/>
				</div>
				<div class="song-main">
					<div class="song-header">
						{% if entry.date %}
							<time class="song-date" datetime="{{ entry.date }}">{{ entry.date }}</time>
						{% endif %}
						{% if entry.url %}
							<a class="song-link" href="{{ entry.url }}" rel="noopener" target="_blank">{{ label }}</a>
						{% else %}
							<span class="song-link">{{ label }}</span>
						{% endif %}
					</div>
					{% if entry.comment %}
						<p class="song-comment">{{ entry.comment }}</p>
					{% endif %}
				</div>
			</div>
		</li>
	{% endfor %}
</ul>
<script src="{{ '/js/music-covers.js' | url }}" defer></script>
{% else %}
<p>No songs logged yet. Add one in _data/musicSongs.js.</p>
{% endif %}
